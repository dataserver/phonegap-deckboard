<?xml version='1.0' encoding='utf-8'?>
<widget 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:gap="http://phonegap.com/ns/1.0"
    id="com.github.dataserver.deckboard" 
    version="2" 
>
    <name>Deckboard</name>
    <description>
        Deckboard
    </description>
    <author email="dataserver@users.noreply.github.com" href="http://dataserver.github.io">
        dataserver
    </author>
    <content src="index.html" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <access origin="*" />
    
    <preference name="phonegap-version" value="cli-7.1.0" />
    <preference name="KeyboardDisplayRequiersUserAction" value="false"/>

    <plugin name="cordova-plugin-whitelist" spec="1.3.3" source="npm" />
    <plugin name="phonegap-plugin-barcodescanner" spec="8.0.1" source="npm" />
    <platform name="android">
        <icon src="res/icon.png" />
    </platform>
</widget>
